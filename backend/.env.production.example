# Production Environment Configuration

# Timezone
TZ=UTC

# Server Configuration
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info

# APP KEY for AdonisJS
# Generate with: docker compose run --rm backend node ace generate:key
APP_KEY=

# Application Mode
NODE_ENV=production

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=root
DB_PASSWORD=root
DB_DATABASE=app

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost,http://localhost:80

# Session Configuration
SESSION_DRIVER=cookie

# Security
TRUST_PROXY=true
